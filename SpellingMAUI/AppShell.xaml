<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SpellingMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SpellingMAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Your List"
            ContentTemplate="{DataTemplate local:YourListPage}"
            Route="YourListPage" />
        <ShellContent 
            Title="Scores"
            ContentTemplate="{DataTemplate local:ResultsPage}"
            Route="Scores"
            />
    </TabBar>
</Shell>
